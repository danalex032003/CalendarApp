<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calendar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_A100</item>
        <item name="colorPrimaryVariant">@color/teal_A200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_A400</item>
        <item name="colorSecondaryVariant">@color/teal_A700</item>

        <!-- Surface containers. -->

        <item name="colorSurfaceContainer">@color/dark_grey</item>
        <item name="colorSurfaceContainerHighest">#1e1e1e</item>
        <item name="colorSurfaceContainerHigh">#222222</item>
        <item name="colorSurfaceContainerLow">#242424</item>
        <item name="colorSurfaceContainerLowest">#272727</item>



        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->

        <!-- Text colors. -->
    </style>

    <style name="Theme.Calendar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Calendar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Calendar.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>